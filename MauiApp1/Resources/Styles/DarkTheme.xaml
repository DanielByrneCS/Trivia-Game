<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.DarkTheme">

    <!--Below is dark theme-->

        <Color x:Key="PrimaryBackgroundColor">#222222</Color>
        <Color x:Key="SecondaryBackgroundColor">#333333</Color>
        <Color x:Key="TertiaryBackgroundColor">#444444</Color>

        <Color x:Key="PrimaryTextColor">#FFFFFF</Color>
        <Color x:Key="SecondaryTextColor">#CCCCCC</Color>

        <Color x:Key="PrimaryAccentColor">#007BFF</Color>
        <Color x:Key="SecondaryAccentColor">#FF6347</Color>

        <Color x:Key="PrimaryBorderColor">#555555</Color>
        <Color x:Key="SecondaryBorderColor">#777777</Color>

        <Style TargetType ="Button">
            <Setter Property ="FontFamily" Value ="ApeMount"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="BackgroundColor" Value="AliceBlue"/>
            <Setter Property="TextColor" Value="Navy"/>
        </Style>



</ResourceDictionary>