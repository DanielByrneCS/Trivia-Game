<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.LightTheme">


    <!--Below is Light theme-->
    
    <Color x:Key="PrimaryBackgroundColor">#D5D5D5</Color>
    <Color x:Key="SecondaryBackgroundColor">#ACACAC</Color>
    <Color x:Key="TertiaryBackgroundColor">#2f55ff</Color>

    <Color x:Key="PrimaryTextColor">#151515</Color>
    <Color x:Key="SecondaryTextColor">#464646</Color>

    <Color x:Key="PrimaryAccentColor">#007BFF</Color>
    <Color x:Key="SecondaryAccentColor">#FF6347</Color>

    <Color x:Key="PrimaryBorderColor">#555555</Color>
    <Color x:Key="SecondaryBorderColor">#777777</Color>

    <Style TargetType ="Button">
        <Setter Property ="FontFamily" Value ="ApeMount"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="CornerRadius" Value="13"/>
    </Style>


</ResourceDictionary>